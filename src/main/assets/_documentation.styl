article
  .section-marker
    position: absolute
    margin-left: -1em
    width: 1em
    display: block
    visibility: hidden
    text-decoration: none
    font-weight: normal
    text-align: center

  h1:hover > .section-marker, h2:hover > .section-marker, h3:hover > .section-marker, h4:hover > .section-marker, h5:hover > .section-marker
    visibility: visible
    color: inherit
    text-decoration: none

  pre.prettyprint
    background: lb-off-white-dkr
    border: 1px solid lb-light-grey
    padding: 5px 10px
    margin-bottom: 1rem

    code
      background: none
      border: none
      padding: 0
      font-size: 10pt
      line-height: 1
  code
    background: lb-off-white-dkr
    border: 1px solid lb-light-grey

.breadcrumbs
  font-size: 0.8em

.side-menu
  a:link, a:visited
    font-weight normal

  .current-page
    a:link, a:visited
      font-weight 700