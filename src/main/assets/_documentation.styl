.side-menu
  h3
    font-size: 14pt

article
  .section-marker
    position: absolute
    margin-left: -1em
    width: 1em
    display: block
    visibility: hidden
    text-decoration: none
    font-weight: normal
    text-align: center

  h1:hover > .section-marker, h2:hover > .section-marker, h3:hover > .section-marker, h4:hover > .section-marker, h5:hover > .section-marker
    visibility: visible
    color: inherit
    text-decoration: none

  pre.prettyprint
    background: #f7f7f7
    border: none
    padding: 0 10px

    code
      background: none
      border: none
      padding: 0
      font-size: 10pt
      line-height: 1

.breadcrumbs
  font-size: 0.8em