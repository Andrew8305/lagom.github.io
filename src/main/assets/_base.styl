body
	background lgm-purple
	color lb-slate
	font-family lightbend-fonts
	font-smoothing antialiased
	-webkit-font-size-adjust none
	text-rendering optimizeLegibility
.off-canvas-content
	background lgm-purple
	@media screen and (min-width: 40em)
		background: lgm-purple url("images/ui/lagom-hero.png") no-repeat
		background-position: center top
		background-attachment: fixed

.fw-wrapper
	padding: 60px 0px
	background: transparent
	&.flush
		padding: 0
	&.flush-top
		padding: 0 0 60px 0
	&.flush-bottom
		padding: 60px 0 0 0
	&.white
		background: white
	&.white-ltr
		background: white-ltr
	&.lb-light-grey-ltr
		background: lb-light-grey-ltr
	&.lgm-purple
		background: lgm-purple
		h1,h2,h3,h4,h5,h6,p
			color: white
	&.lb-slate
		background: lb-slate
		h1,h2,h3,h4,h5,h6,p
			color: white
	&.lb-slate-dkr
		background: lb-slate-dkr
		h1,h2,h3,h4,h5,h6,p
			color: white
	&.lb-slate-ltr
		background: lb-slate-ltr
		h1,h2,h3,h4,h5,h6,p
			color: white
	&.hero-banner
		background: transparent
		br
			display: none
		@media screen and (min-width: 40em)
			br
				display: block
		h1
			color: white
			font-size: 2.5em
			line-height: 1.125em
			margin-bottom: 1.5em
			font-weight: 400
		.logo
			width: 300px
			display: block
			margin-bottom: 15px
	&.home-content
		border-top: 2px solid white
		background: lb-light-grey-ltr url("images/ui/lagom-hexagon-repeat-fade.png") repeat-x center top

.navbar
	background-color white
	border-top solid 5px lgm-purple
	height 80px
	.menu-icon
		width: 40px
		margin-right: 10px
		height: 30px
		vertical-align: top
		margin-top: 22px
		&:after
			background: lgm-purple
			box-shadow: 0 14px 0 lgm-purple,0 28px 0 lgm-purple

	.logo
		float: right
		@media screen and (min-width: 40em)
			float: none
		display: inline-block
		margin-top: 15px
		.svg-logo
			height: 44px

	.sections
		float right
		border-right solid 1px lb-light-grey
		a
			display block
			float left
			border-left solid 1px lb-light-grey
			color lgm-purple-dkr
			height 75px
			line-height 45px
			padding 15px
			font-size 14px
			font-weight 700
			text-transform uppercase

.get-started
	padding-top: 60px
	& + .row
		margin-top: 20px
		@media screen and (min-width: 40em)
			margin-top: 30px
		@media screen and (min-width: 64em)
			margin-top: 40px

.title
	.large-lagom-logo
		float left
		width 300px
		height 150px
		padding-right 20px
	font-size 40px
	font-weigt 700
	color white

.lagom-intro
	clear both
	margin-left auto
	margin-right auto
	width 640px

.page-header
	height 100px
	color white

	h1
		color: white

.page
	width 100%
	background-color white

.flex-video
	box-shadow: shadow
	iframe
		border: 4px solid white